---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import photosData from "../data/photos.json";
import ShiftStory2 from "../sections/ShiftStory2.astro";
import Testimonials from "../sections/Testimonials.astro";
const images: string[] = (photosData && photosData.images) ? photosData.images : [];
---
<Base title="Ben Allen — Personal Profile" description="Student, customer assistant and creator. Profile, skills, and experience.">
  <Hero />

  <section class="grid grid--two" aria-label="Core strengths">
    <div class="flip" data-flip data-reveal tabindex="0" role="button" aria-pressed="false" aria-label="Flip Customer Service card">
      <div class="flip-inner">
        <div class="flip-face front card">
          <h2><svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 7h16M4 12h10M4 17h7"/></svg> Customer Service</h2>
          <p>Friendly and clear communication, queue management, complaint handling and escalation with a calm attitude.</p>
        </div>
        <div class="flip-face back card">
          <h3>Customer Service</h3>
          <ul>
            <li>Clear, friendly communication with a calm approach.</li>
            <li>Queue management, complaints and escalation.</li>
          </ul>
          <small class="hint">Tap to flip back</small>
        </div>
      </div>
    </div>

    <div class="flip" data-flip data-reveal="slide-right" tabindex="0" role="button" aria-pressed="false" aria-label="Flip EPOS & Retail card">
      <div class="flip-inner">
        <div class="flip-face front card">
          <h2><svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 7h18M6 7v10a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V7"/></svg> EPOS & Retail</h2>
          <p>Basic tills, refunds and exchanges, Click & Collect picking, stock rotation and facing/planograms.</p>
        </div>
        <div class="flip-face back card">
          <h3>EPOS & Retail</h3>
          <ul>
            <li>Tills, refunds and exchanges.</li>
            <li>Picking, rotation and facing/planograms.</li>
          </ul>
          <small class="hint">Tap to flip back</small>
        </div>
      </div>
    </div>

    <div class="flip" data-flip data-reveal="slide-left" tabindex="0" role="button" aria-pressed="false" aria-label="Flip Hospitality Ready card">
      <div class="flip-inner">
        <div class="flip-face front card">
          <h2><svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 8h12M6 12h8M6 16h6"/></svg> Hospitality Ready</h2>
          <p>Table running, barback/glass collection, clean‑as‑you‑go and allergen awareness; opening/closing checks.</p>
        </div>
        <div class="flip-face back card">
          <h3>Hospitality Ready</h3>
          <ul>
            <li>Table running and glass collection.</li>
            <li>Clean‑as‑you‑go, allergen awareness and checks.</li>
          </ul>
          <small class="hint">Tap to flip back</small>
        </div>
      </div>
    </div>

    <div class="flip" data-flip data-reveal tabindex="0" role="button" aria-pressed="false" aria-label="Flip Reliable & Punctual card">
      <div class="flip-inner">
        <div class="flip-face front card">
          <h2><svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3v6l4 2"/></svg> Reliable & Punctual</h2>
          <p>On time, prepared, and dependable with a full UK driving licence and own car.</p>
        </div>
        <div class="flip-face back card">
          <h3>Reliable & Punctual</h3>
          <ul>
            <li>On time and prepared for shifts.</li>
            <li>Full UK driving licence and own car.</li>
          </ul>
          <small class="hint">Tap to flip back</small>
        </div>
      </div>
    </div>
  </section>

  <ShiftStory2 />


  <Testimonials />

  <section class="cta-band reveal" aria-label="Get in touch">
    <h2>Need reliable help on your next shift?</h2>
    <p class="tagline">I’m available for part‑time work and weekend shifts in and around High Wycombe.</p>
    <div class="btns">
      <a class="btn primary" href="mailto:ben@allen.io?subject=Shift%20availability%20enquiry">Contact Ben</a>
      <a class="btn ghost" href="/cv">View full CV</a>
    </div>
  </section>

  <script is:inline>
    // Click to flip; click again to flip back. Keyboard: Enter/Space toggles.
    document.querySelectorAll('[data-flip]').forEach((el)=>{
      const toggle = () => {
        el.classList.toggle('is-flipped');
        const pressed = el.classList.contains('is-flipped');
        el.setAttribute('aria-pressed', pressed ? 'true' : 'false');
      };
      el.addEventListener('click', (e)=>{ toggle(); });
      el.addEventListener('keydown', (e)=>{
        if(e.key === 'Enter' || e.key === ' '){ e.preventDefault(); toggle(); }
      });
    });
  </script>

  <section class="content" data-reveal>
    <h2>Experience</h2>
    <div class="timeline">
      <div class="item" data-reveal>
        <h3>Seymour Taylor Accountants — Work Experience</h3>
        <div class="meta">1 week, Mar 2025</div>
        <p>Data entry, spreadsheets and reconciliations with a short presentation of learnings.</p>
      </div>
      <div class="item" data-reveal>
        <h3>Microsoft — Work Shadowing</h3>
        <div class="meta">2 days, 2024</div>
        <p>Observed agile meetings and collaboration tools; shadowed the Government CTO at 10 Downing Street.</p>
      </div>
      <div class="item" data-reveal>
        <h3>YouTube Creator</h3>
        <div class="meta">2023–present</div>
        <p>100+ published videos, 10k+ subscribers. Plans, edits and analyses performance to improve.</p>
      </div>
    </div>
  </section>

  <section class="content" data-reveal>
    <h2>Photos</h2>
    <p class="lead">A small gallery showcasing Ben at work and beyond.</p>
    <div class="btns">
      <a class="btn" href="/photos">View gallery</a>
    </div>
  </section>
</Base>
